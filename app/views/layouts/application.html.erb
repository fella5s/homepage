<!DOCTYPE html>
<html>
  <head>
    <title>fella5s - <%= @path %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="top">./<%= @path %></div>
      <div id="left">
        <ul class="linklist">
          <% @pages.each do |p| %>
          <li><%= p.name %></li>
          <% end %>
        </ul>
      </div>
      <div id="main">

      <%= yield %>

      </div>
    </div>
  </body>
</html>
