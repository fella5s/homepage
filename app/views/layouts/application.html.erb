<!DOCTYPE html>
<html>
  <head>
    <title>fella5s - <%= @path %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="top">./<%= @page.name %></div>
      <div id="left">
        <ul class="linklist">
          <% @pages.each do |page| %>
          <li><small><%= link_to page.name, page_path(page.id) %></small></li>
          <% end %>
          <li><small><%= link_to "Lisaa uusi sivu", new_page_path %></small></li>
        </ul>
      </div>
      <div id="main">

      <%= yield %>

      </div>
    </div>
  </body>
</html>
